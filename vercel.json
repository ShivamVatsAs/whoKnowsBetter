{
  "version": 2,
  "name": "couples-quiz-connect",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
  { "source": "/api/(.*)", "destination": "/backend/server.js" },
  { "source": "/(.*)", "destination": "/frontend/dist/index.html" } 
],
  "env": {
    "NODE_ENV": "production"
  }
}
